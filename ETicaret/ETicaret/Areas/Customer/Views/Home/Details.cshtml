@model ETicaret.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <form method="post">
            <input hidden asp-for="ProductId" />
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/images/image/@Model.Product.Image" class="img-fluid rounded-start" style="height:300px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 text-primary">
                                    Stok <br />
                                </dt>
                                <dd class="col-sm-9">
                                    @if (Model.Product.IsStock)
                                    {
                                        <label class="btn btn-success"><i style="margin-right: 0.2rem;" class="bi bi-check-lg"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="btn btn-danger"><i style="margin-right: 0.2rem;" class="bi bi-x-circle"></i>Hayır</label>
                                    }
                                </dd>
                                <dt class="col-sm-3">
                                    Başlık <br />
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Title
                                </dd>
                                <dt class="col-sm-3">
                                    Açıklama <br />
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Description
                                </dd>
                                <dt class="col-sm-3">
                                    Fiyat <br />
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Price.ToString("0.00") ₺
                                </dd>
                                <dt class="col-sm-3">
                                    Adet <br />
                                </dt>
                                <dd class="col-sm-9">
                                    <input asp-for="Count" class="form-control" />
                                </dd>
                            </dl>
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary form-control"><i class="bi bi-house"></i>ANASAYFA</a>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-3">
                        @if (Model.Product.IsStock)
                        {
                            <button type="submit" class="btn btn-success form-control"><i style="margin-right: 0.2rem;" class="bi bi-cart4"></i>Sepete Ekle</button>
                            <br />
                        }
                        else
                        {
                            <label class="btn btn-danger form-control"><i style="margin-right: 0.2rem;" class="bi bi-cart4"></i>Ürün Tükendi</label>
                            <br />
                        }
                        <br />
                    </div>
                    <div class="col-md-1">

                    </div>
                </div>
            </div>
        </form>

    </div>

</div>

