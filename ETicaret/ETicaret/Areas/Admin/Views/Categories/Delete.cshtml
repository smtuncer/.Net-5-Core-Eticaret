@model ETicaret.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Sil</h1>
<hr />
<h3>Kategoriyi silmek istediğinizden emin misiniz?</h3>
<div class="container">
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Kategori Adı <br />
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Kategori Sil" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-warning">Kategori listesi</a>
        </form>
    </div>
</div>

