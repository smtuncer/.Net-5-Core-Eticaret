@model IEnumerable<ETicaret.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <p>
        <a class="btn btn-primary" asp-action="Create">Yeni Kategori Ekle</a>
    </p>
    <table id="myTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Kategori Adı
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i style="margin-right:0.2rem" class="bi bi-pencil"></i>Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i style="margin-right:0.2rem" class="bi bi-trash"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
}
