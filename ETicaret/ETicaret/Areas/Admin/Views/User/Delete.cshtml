@model ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />  
<h3>Kullanıcıyı silmek istediğinizden emin misiniz?</h3>
<div class="container">
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                Email <br />
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Kullanıcı Sil" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-warning">Kullanıcı listesi</a>
        </form>
    </div>
</div>

